<?php
declare(strict_types=1);

namespace Zubr;

/**
 * \Zubr\substr()
 *
 * @link https://secure.php.net/substr
 *
 * NOTES: same as \substr() || in Zubr, $param_1 goes before $param_2, and we return an array instead of void
*/
function substr($string, $start, $length = null)
{
    return \substr($string, $start, $length = null);
}