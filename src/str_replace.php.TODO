<?php
declare(strict_types=1);

namespace Zubr;

/**
 * \Zubr\str_replace()
 *
 * @link https://secure.php.net/str_replace
 *
 * NOTES: same as \str_replace() || in Zubr, $param_1 goes before $param_2, and we return an array instead of void
*/
function str_replace($search, $replace, $subject, &$count = null)
{
    return \str_replace($search, $replace, $subject, &$count = null);
}