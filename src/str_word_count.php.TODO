<?php
declare(strict_types=1);

namespace Zubr;

/**
 * \Zubr\str_word_count()
 *
 * @link https://secure.php.net/str_word_count
 *
 * NOTES: same as \str_word_count() || in Zubr, $param_1 goes before $param_2, and we return an array instead of void
*/
function str_word_count($string, $format = null, $charlist = null)
{
    return \str_word_count($string, $format = null, $charlist = null);
}