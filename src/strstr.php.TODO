<?php
declare(strict_types=1);

namespace Zubr;

/**
 * \Zubr\strstr()
 *
 * @link https://secure.php.net/strstr
 *
 * NOTES: same as \strstr() || in Zubr, $param_1 goes before $param_2, and we return an array instead of void
*/
function strstr($haystack, $needle, $before_needle = null)
{
    return \strstr($haystack, $needle, $before_needle = null);
}