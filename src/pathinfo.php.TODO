<?php
declare(strict_types=1);

namespace Zubr;

/**
 * \Zubr\pathinfo()
 *
 * @link https://secure.php.net/pathinfo
 *
 * NOTES: same as \pathinfo() || in Zubr, $param_1 goes before $param_2, and we return an array instead of void
*/
function pathinfo($path, $options = null)
{
    return \pathinfo($path, $options = null);
}