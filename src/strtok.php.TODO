<?php
declare(strict_types=1);

namespace Zubr;

/**
 * \Zubr\strtok()
 *
 * @link https://secure.php.net/strtok
 *
 * NOTES: same as \strtok() || in Zubr, $param_1 goes before $param_2, and we return an array instead of void
*/
function strtok($str = null, $token)
{
    return \strtok($str = null, $token);
}