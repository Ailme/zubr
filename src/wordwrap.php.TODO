<?php
declare(strict_types=1);

namespace Zubr;

/**
 * \Zubr\wordwrap()
 *
 * @link https://secure.php.net/wordwrap
 *
 * NOTES: same as \wordwrap() || in Zubr, $param_1 goes before $param_2, and we return an array instead of void
*/
function wordwrap($str, $width = 75, $break = "\n", $cut = false)
{
    return \wordwrap($str, $width = 75, $break = "\n", $cut = false);
}