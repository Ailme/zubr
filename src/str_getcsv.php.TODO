<?php
declare(strict_types=1);

namespace Zubr;

/**
 * \Zubr\str_getcsv()
 *
 * @link https://secure.php.net/str_getcsv
 *
 * NOTES: same as \str_getcsv() || in Zubr, $param_1 goes before $param_2, and we return an array instead of void
*/
function str_getcsv($input, $delimiter = ",", $enclosure = '"', $escape = "\\")
{
    return \str_getcsv($input, $delimiter = ",", $enclosure = '"', $escape = "\\");
}