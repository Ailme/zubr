<?php
declare(strict_types=1);

namespace Zubr;

/**
 * \Zubr\str_split()
 *
 * @link https://secure.php.net/str_split
 *
 * NOTES: same as \str_split() || in Zubr, $param_1 goes before $param_2, and we return an array instead of void
*/
function str_split($string, $split_length = 1)
{
    return \str_split($string, $split_length = 1);
}