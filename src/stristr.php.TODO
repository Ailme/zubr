<?php
declare(strict_types=1);

namespace Zubr;

/**
 * \Zubr\stristr()
 *
 * @link https://secure.php.net/stristr
 *
 * NOTES: same as \stristr() || in Zubr, $param_1 goes before $param_2, and we return an array instead of void
*/
function stristr($haystack, $needle, $before_needle = null)
{
    return \stristr($haystack, $needle, $before_needle = null);
}